<script type="text/javascript">
  $(document).ready(function () {
    $('#load-more').click(function() {
      
      $(this).hide();

      $.get({
        url: "<%= home_index_path %>",
        data: { page: $(this).attr('data-page') },
        dataType: "script"
      })
    });
  });
</script>
